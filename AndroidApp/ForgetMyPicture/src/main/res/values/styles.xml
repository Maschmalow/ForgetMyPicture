<?xml version="1.0" encoding="utf-8"?>
<resources>


    <style name="basic_view_with_margin">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">8dp</item>
    </style>

    <style name="button_turquoise_background_and_white_text" parent="basic_view_with_margin">
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:textSize">20sp</item>
        <item name="android:background">@color/turquoise</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="small_button_turquoise_background_and_white_text">
        <item name="android:layout_margin">5dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">15sp</item>
        <item name="android:background">@color/turquoise</item>
        <item name="android:textStyle">bold</item>

    </style>

    <style name="basic_root_layout_white_background_with_padding">
        <item name="android:orientation">vertical</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/white</item>
        <item name="android:padding">16dp</item>
    </style>

    <style name="basic_layout">
        <item name="android:orientation">vertical</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

</resources>
