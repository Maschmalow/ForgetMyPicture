<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".activities.Homepage"
    style="@style/basic_root_layout_white_background_with_padding">


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/logo"
        android:layout_gravity="center_horizontal"/>


    <LinearLayout
        android:layout_marginBottom="20dp"
        android:layout_marginTop="20dp"
        android:orientation="vertical"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:gravity="center_vertical">

            <Button
                style="@style/button_turquoise_background_and_white_text"
                android:onClick="startNewSearchFromUI"
                android:text="@string/homepage_new_request"/>
        </LinearLayout>

        <LinearLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:gravity="center_vertical">


            <Button
                style="@style/button_turquoise_background_and_white_text"
                android:onClick="goToRequestsFromUI"
                android:text="@string/homepage_requests_panel"/>
        </LinearLayout>


    </LinearLayout>



</LinearLayout>
